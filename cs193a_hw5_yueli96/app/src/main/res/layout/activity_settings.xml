<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SettingsActivity">




    <TextView
            android:id="@+id/firebase_label"
            android:text="Firebase:"
            android:textSize="30sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    <Button
            android:text="Load small game"
            android:onClick="loadSmallFbClick"
            android:id="@+id/smalldata_button"
            app:layout_constraintTop_toBottomOf="@+id/firebase_label"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/fulldata_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    <Button
            android:text="load full game"
            android:onClick="loadFullFbClick"
            android:id="@+id/fulldata_button"
            app:layout_constraintTop_toBottomOf="@+id/firebase_label"
            app:layout_constraintLeft_toRightOf="@id/smalldata_button"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
</android.support.constraint.ConstraintLayout>